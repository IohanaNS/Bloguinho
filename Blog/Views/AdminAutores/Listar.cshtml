@using Blog.ViewModels.Admin
@model Blog.ViewModels.Admin.AdminAutoresListarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Listagem de Etiquetas</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <a class="btn btn-primary mb-3" href="/admin/autores/criar">Criar novo autor</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (AutorAdminAutores autor in @Model.Autores)
                {
                    <tr>
                        <td>@autor.IdAutor</td>
                        <td>@autor.NomeAutor</td>
                       
                        <td>
                            <a class="btn btn-default btn-xs" href="/admin/etiquetas/editar/@autor.IdAutor">Editar</a>
                            <a class="btn btn-danger btn-xs" href="/admin/etiquetas/remover/@autor.IdAutor">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>